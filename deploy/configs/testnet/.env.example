# BlueBlocks TestNet Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================
# NETWORK CONFIGURATION
# ============================================
NETWORK=testnet
CHAIN_ID=blueblocks-testnet

# ============================================
# NODE CONFIGURATION
# ============================================
NODE_LOG_LEVEL=info
NODE_CORS_ENABLED=true
NODE_CORS_ORIGINS=https://explorer.testnet.blueblocks.xyz

# ============================================
# VALIDATOR CONFIGURATION
# ============================================
VALIDATOR_MIN_STAKE=25000
VALIDATOR_TYPE=standard

# ============================================
# MINER CONFIGURATION
# ============================================
MINER_WORKERS=4
MINER_DIFFICULTY=4
MINER_REWARD=50000000

# ============================================
# TREASURY ADDRESSES
# ============================================
TESTNET_TREASURY_ADDRESS=bb0000000000000000000000000000000000000001
TESTNET_FAUCET_ADDRESS=bb0000000000000000000000000000000000000002

# ============================================
# ETHEREUM BRIDGE (Sepolia TestNet)
# ============================================
TESTNET_ETH_RPC=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
TESTNET_TOKEN_SALE_CONTRACT=0x0000000000000000000000000000000000000000
TESTNET_ETH_START_BLOCK=0

# ============================================
# DATABASE
# ============================================
TESTNET_DB_PASSWORD=secure_testnet_password_change_me
TESTNET_DB_HOST=timescaledb
TESTNET_DB_PORT=5432
TESTNET_DB_NAME=blueblocks_indexer
TESTNET_DB_USER=blueblocks

# ============================================
# MONITORING
# ============================================
TESTNET_GRAFANA_PASSWORD=secure_grafana_password

# ============================================
# EXPLORER CONFIGURATION
# ============================================
EXPLORER_API_URL=http://localhost:8080
EXPLORER_WS_URL=ws://localhost:8080/ws
NEXT_PUBLIC_CHAIN_ID=blueblocks-testnet
NEXT_PUBLIC_CHAIN_NAME=BlueBlocks TestNet
