# BlueBlocks DevNet Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================
# NETWORK CONFIGURATION
# ============================================
NETWORK=devnet
CHAIN_ID=blueblocks-devnet

# ============================================
# NODE CONFIGURATION
# ============================================
NODE_LOG_LEVEL=debug
NODE_CORS_ENABLED=true
NODE_CORS_ORIGINS=*

# ============================================
# MINER CONFIGURATION
# ============================================
MINER_WORKERS=2
MINER_DIFFICULTY=2
MINER_REWARD=50000000

# ============================================
# TREASURY ADDRESSES
# ============================================
DEVNET_TREASURY_ADDRESS=bb0000000000000000000000000000000000000001
DEVNET_FAUCET_ADDRESS=bb0000000000000000000000000000000000000002

# ============================================
# DATABASE (Optional - for indexer)
# ============================================
DEVNET_DB_PASSWORD=devnet_password_change_me

# ============================================
# EXPLORER CONFIGURATION
# ============================================
EXPLORER_API_URL=http://localhost:8080
EXPLORER_WS_URL=ws://localhost:8080/ws

# ============================================
# DEVELOPMENT KEYS (DO NOT USE IN PRODUCTION)
# ============================================
# These are example keys for local development only
DEV_ACCOUNT_1_PRIVATE_KEY=
DEV_ACCOUNT_1_ADDRESS=bb1111111111111111111111111111111111111111

DEV_ACCOUNT_2_PRIVATE_KEY=
DEV_ACCOUNT_2_ADDRESS=bb2222222222222222222222222222222222222222
